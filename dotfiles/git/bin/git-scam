#!/bin/bash
#
# git scam (git "safe commit all with message")
#
# Adds all files with git add -A
# Confirms commit
# Commits with given message
#

if ! [ "$1" ]; then
  echo 'error: You didnt specify a commit message'
  return 1
fi

git add -A 
git status

read 'confirmed?Do you still want to commit all? [Yn]'
if [ "$confirmed" = 'Y' ]
then
  echo
  git commit -m "$1"
  echo
else
  git reset > /dev/null
fi