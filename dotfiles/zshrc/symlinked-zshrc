#!/bin/bash
#
# Symlinks .zshrc
# Links other configs
#
requires log-writer
requires zshrcfiles-initialized
requires environment-name

if [ ! -e "$HOME/.zshrc" ] || ! grep '# bryces-dotfiles-zshrc' "$HOME/.zshrc"; then
  log_trace 'Linking my zshrc'

  if [ -e "$HOME/.zshrc" ]; then
    log_warning 'Removing existing zshrc'
    rm -f "$HOME/.zshrc"
  fi

  ln -s "$DOTFILES_DIR/zshrc/.zshrc" "$HOME/.zshrc"
else
  log_trace 'My zshrc already in place'
fi

if [ ! -e "$HOME/.zshenv" ]; then
  log_trace 'Linking zshenv'

  ln -s "$DOTFILES_DIR/zshrc/.zshenv" "$HOME/.zshenv"
fi

case "$ENVIRONMENT" in
  'mac')
    if [ ! -e "$HOME/.zshrcfiles/.zsh_mac" ]; then
      log_trace "Symlinking .zsh_mac"

      ln -s "$DOTFILES_DIR/zshrcfiles/environment/.zsh_mac" "$HOME/.zshrcfiles/.zsh_mac"
    fi
    log_trace 'Linked .zsh_mac settings' 
  ;;
esac

shopt -s nullglob
for thisFile in "$DOTFILES_DIR"/zshrcfiles/.*; do
  if [ ! -d "$thisFile" ]; then

    thisFileName=$(basename "$thisFile")
    log_trace "Symlinking $thisFileName"

    if [ ! -e "$HOME/.zshrcfiles/$thisFileName" ]; then
        ln -s "$thisFile" "$HOME/.zshrcfiles/$thisFileName"
    fi

    log_trace "Linked $thisFileName settings"
  fi
done

log_message 'zshrc setup'